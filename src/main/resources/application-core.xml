	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
		<property name="driverClass" value="${jdbc.driver}" />
		<property name="jdbcUrl" value="${jdbc.url}" />
		<property name="user" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
		<property name="maxPoolSize" value="15" />
		<property name="minPoolSize" value="3" />	
		<property name="initialPoolSize" value="3" />	
		<property name="maxIdleTime" value="1800" />
		<!-- auto reconnect -->
		<property name="preferredTestQuery" value="SELECT 1"/>  
		<property name="idleConnectionTestPeriod" value="600"/>  
 		<property name="testConnectionOnCheckout" value="true" />
	</bean>
	<!-- tansaction -->
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager" />
	<!-- mybatis -->
	<mybatis:scan base-package="com.metasoft.model.mapper" />
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
	  <property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
	  <constructor-arg index="0" ref="sqlSessionFactory" />
	  <constructor-arg index="1" value="BATCH" />
	</bean>
	
	<!--静态资源过滤-->	
	<bean id="applicationFilter" class="com.metasoft.web.ApplicationFilter" >
			<property name="resourcePaths">
				<list>
					<value>/favicon.ico</value>
					<value>/images/</value>
					<value>/plugins/</value>
					<value>/css/</value>
					<value>/js/</value>		
					<value>/script/</value>	
				</list>
			</property>
	</bean>
	
	<!-- 本地化语言 -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="defaultEncoding" value="UTF-8" />
		<property name="basenames">
			<list>
				<value>classpath:language</value>	
			</list>
		</property>
	</bean>
			
	<beans profile="production">
		<context:property-placeholder location="classpath:application.properties" />
		<util:properties id="properties" location="classpath:application.properties" />
	</beans>

	<beans profile="development">
		<context:property-placeholder location="classpath:application-dev.properties" />
		<util:properties id="properties" location="classpath:application-dev.properties" />
	</beans>
</beans>