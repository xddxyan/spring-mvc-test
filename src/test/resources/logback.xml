<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] [%logger{0}] Line:%L %m%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.metasoft" additivity="false">
		<level value="debug" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.springframework.jdbc" additivity="false">
		<level value="trace" />
		<appender-ref ref="STDOUT" />
	</logger>
	
	<root level="info">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>